# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_API_PREFIX=/api

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_WS_PATH=/socket.io

# Application Configuration
NEXT_PUBLIC_APP_NAME=Elevare
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_VIDEO_CALLS=true
NEXT_PUBLIC_ENABLE_WHITEBOARD=true
NEXT_PUBLIC_ENABLE_AI_SUMMARY=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=educational

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Environment
NEXT_PUBLIC_ENV=development
